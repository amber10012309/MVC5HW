@model IEnumerable<Cust.Models.客戶聯絡人>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    @Html.Label("職稱搜尋", new { @class = "col-md-1" })
    @Html.TextBox("SearchValue", null, new { @class = " form-control col-md-4" })

    <input type="submit" value="查詢" class=" form-control col-md-2" />

    <div>
        @Html.ActionLink("Excel輸出", "FileSave")
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink((Html.DisplayNameFor(model => model.職稱)).ToHtmlString(), (string)ViewBag.Title, new { sortOrder = ViewBag.職稱Sort })
            </th>
            <th>

                @Html.ActionLink((Html.DisplayNameFor(model => model.姓名)).ToHtmlString(), (string)ViewBag.Title, new { sortOrder = ViewBag.姓名Sort })
            </th>
            <th>
                @Html.ActionLink((Html.DisplayNameFor(model => model.Email)).ToHtmlString(), (string)ViewBag.Title, new { sortOrder = ViewBag.EmailSort })
            </th>
            <th>
                @Html.ActionLink((Html.DisplayNameFor(model => model.手機)).ToHtmlString(), (string)ViewBag.Title, new { sortOrder = ViewBag.手機Sort })
            </th>
            <th>
                @Html.ActionLink((Html.DisplayNameFor(model => model.電話)).ToHtmlString(), (string)ViewBag.Title, new { sortOrder = ViewBag.電話Sort })
            </th>
            <th>
                @Html.ActionLink((Html.DisplayNameFor(model => model.客戶資料.客戶名稱)).ToHtmlString(), (string)ViewBag.Title, new { sortOrder = ViewBag.客戶名稱Sort })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.職稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.姓名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.手機)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.電話)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
